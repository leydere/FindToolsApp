<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leydere.findtoolsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindToolsApp">
        <activity android:name=".ReturnToolPopUpWindow"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FindToolActivity" />
        <activity android:name=".AddToolActivity" />
        <activity android:name=".ToolDetailActivity" />
        <activity android:name=".WorkbenchActivity" />
    </application>

</manifest>